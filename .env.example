# Security (Required - minimum 32 characters)
SECRET_KEY=your_secret_key_here_minimum_32_characters_long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Personal Website CV Paths
# Update these paths to point to your actual CV files
PERSONAL_WEBSITE_CV_EN_PATH=/home/cherif/dev/personal-website/assets/cv/Mihoubi_Med_Cherif_CV_EN.pdf
PERSONAL_WEBSITE_CV_DE_PATH=/home/cherif/dev/personal-website/assets/cv/Mihoubi_Med_Cherif_CV_DE.pdf

# Application Settings
DEBUG=false  # Set to true for development
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

